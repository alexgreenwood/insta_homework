
<dl class="dl-horizontal">

  <dd><img src="<%= @photo.image_url %>" width="800"></dd>

  <dd><%= @photo.caption %></dd>


  <dd><%= @photo.user.email %></dd>

  <dd><a href="/favorites/new" class="bts btn-primary"> Favorite <</dd>


  <dd class="media-list">
    <% @photo.comments.each do |comment| %>
      <li class="media">
        <a class="pull-left" href="#">
          <img class="media-object" src= <%= comment.user.avatar_url %> alt="..." width= 40px>
        </a>
        <div class="media-body">
          <h4 class="media-heading"> <%= comment.user.email %> </h4>
          <%= comment.content %>
        </div>
      </li>
    <% end %>
  </dd>


  <dd>
  <form action="/create_comment" class="form-horizontal">
    <!-- Label and input for content -->
    <div class="form-group">
      <div class="col-sm-10">
        <textarea id="content" name="content" placeholder="Write a comment..." class="form-control" rows="1"></textarea>
      </div>
    </div>


    <!-- Label and input for picture_id -->
    <div class="form-group">
      <div class="col-sm-10">
        <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @photo.id %>">
        <input type="hidden" id="user_id" name="current_user.id" placeholder="User" class="form-control" value="<%= @photo.user_id %>">
      </div>
    </div>



    <div class="form-group">
      <div class="col-sm-10">
        <input type="submit" value="Add Comment" class="btn btn-primary">
      </div>
    </div>
  </form>



</dl>
